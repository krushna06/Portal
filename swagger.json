{
	"openapi": "3.0.0",
	"info": {
		"version": "1.0.0",
		"title": "ByteBridge Limited API",
		"description": "This is the schema for the API, used to interact with the ByteBridge Limited bot."
	},
	"servers": [
		{
			"description": "[TEST] SwaggerHub API Auto Mocking",
			"url": "https://n0step.xyz/"
		},
		{
			"url": "http://localhost:{port}/api",
			"description": "[DEV] Local development API server",
			"variables": {
				"port": {
					"default": "8080"
				}
			}
		},
		{
			"url": "{host}/api",
			"description": "[PROD] Production API server",
			"variables": {
				"host": {
					"default": "http://localhost:8080"
				}
			}
		}
	],
	"security": [
		{
			"api_key": []
		}
	],
	"paths": {
		"/admin/guilds": {
			"get": {
				"tags": ["admin"],
				"summary": "List the guilds that the user has permission to manage",
				"description": "This route returns an array of guilds that the user can manage.",
				"responses": {
					"200": {
						"description": "OK",
						"content": {
							"application/json": {
								"schema": {
									"type": "array",
									"items": {
										"$ref": "#/components/schemas/Guild"
									}
								}
							}
						}
					},
					"default": {
						"$ref": "#/components/responses/default"
					}
				}
			}
		},
		"/admin/guilds/{guild}": {
			"parameters": [
				{
					"name": "guild",
					"in": "path",
					"description": "The guild to get or update the settings of",
					"required": true,
					"style": "simple",
					"schema": {
						"type": "string"
					}
				}
			],
			"delete": {
				"tags": ["admin"],
				"summary": "Reset a guild's settings",
				"description": "This route resets the guild's settings.",
				"responses": {
					"200": {
						"description": "OK",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/GuildSettings"
								}
							}
						}
					},
					"default": {
						"$ref": "#/components/responses/default"
					}
				}
			},
			"get": {
				"tags": ["admin"],
				"summary": "Get a guild's settings",
				"description": "This route returns the guild's current settings.",
				"responses": {
					"200": {
						"description": "OK",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/GuildSettings"
								}
							}
						}
					},
					"default": {
						"$ref": "#/components/responses/default"
					}
				}
			},
			"put": {
				"tags": ["admin"],
				"summary": "Set a guild's settings",
				"description": "This route sets the guild's settings.",
				"requestBody": {
					"description": "The full GuildSettings object",
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/GuildSettings"
							}
						}
					}
				},
				"responses": {
					"200": {
						"description": "OK",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/GuildSettings"
								}
							}
						}
					},
					"default": {
						"$ref": "#/components/responses/default"
					}
				}
			}
		},
		"/admin/guilds/{guild}/data": {
			"get": {
				"tags": ["admin"],
				"summary": "Get properties from the guild data",
				"description": "This route returns the requested property from the guild.",
				"parameters": [
					{
						"name": "guild",
						"in": "path",
						"description": "The guild to reset the settings of",
						"required": true,
						"style": "simple",
						"schema": {
							"type": "string"
						}
					},
					{
						"name": "query",
						"in": "query",
						"description": "The dot-notation property to get",
						"required": true,
						"style": "form",
						"schema": {
							"type": "string"
						}
					}
				],
				"responses": {
					"200": {
						"description": "OK",
						"content": {
							"application/json": {
								"schema": {
									"type": "object"
								},
								"example": 5
							}
						}
					},
					"default": {
						"$ref": "#/components/responses/default"
					}
				}
			}
		},
		"/admin/guilds/{guild}/categories": {
			"get": {
				"tags": ["admin"],
				"summary": "List the categories of a guild",
				"description": "This route returns an array of categories within a guild.",
				"parameters": [
					{
						"name": "guild",
						"in": "path",
						"description": "The guild to list the categories of",
						"required": true,
						"style": "simple",
						"schema": {
							"type": "string"
						}
					}
				],
				"responses": {
					"200": {
						"description": "OK",
						"content": {
							"application/json": {
								"schema": {
									"type": "array",
									"items": {
										"$ref": "#/components/schemas/Category"
									}
								}
							}
						}
					},
					"default": {
						"$ref": "#/components/responses/default"
					}
				}
			},
			"post": {
				"tags": ["admin"],
				"summary": "Create a new category",
				"description": "This route creates a new category within a guild.",
				"parameters": [
					{
						"name": "guild",
						"in": "path",
						"description": "The guild to create a category in",
						"required": true,
						"style": "simple",
						"schema": {
							"type": "string"
						}
					}
				],
				"requestBody": {
					"description": "The full CategorySettings object",
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"type": "object",
								"required": ["name", "openingMessage", "staffRoles"],
								"properties": {
									"discordCategory": {
										"type": "string"
									},
									"name": {
										"type": "string"
									},
									"openingMessage": {
										"type": "string"
									},
									"staffRoles": {
										"type": "array",
										"items": {
											"type": "string"
										}
									}
								},
								"example": {
									"discordCategory": null,
									"name": "Support",
									"openingMessage": "Thank you for creating a ticket. Please be patient, a member of the support team will reply when they become available. Whilst you wait, please provide as much information about your support query as possible. ",
									"roles": [451745787974778908, 513828182697312267]
								}
							}
						}
					}
				},
				"responses": {
					"201": {
						"description": "Created",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/CategorySettings"
								}
							}
						}
					},
					"default": {
						"$ref": "#/components/responses/default"
					}
				}
			}
		},
		"/admin/guilds/{guild}/categories/{category}": {
			"delete": {
				"tags": ["admin"],
				"summary": "Delete a category",
				"description": "This route deletes the category. Tickets within this category will **not** be deleted automatically.",
				"parameters": [
					{
						"name": "guild",
						"in": "path",
						"description": "The guild the category belongs to",
						"required": true,
						"style": "simple",
						"schema": {
							"type": "string"
						}
					},
					{
						"name": "category",
						"in": "path",
						"description": "The category to delete",
						"required": true,
						"style": "simple",
						"schema": {
							"type": "string"
						}
					}
				],
				"responses": {
					"200": {
						"description": "OK",
						"content": {
							"application/json": {
								"schema": {
									"type": "object"
								}
							}
						}
					},
					"default": {
						"$ref": "#/components/responses/default"
					}
				}
			},
			"get": {
				"tags": ["admin"],
				"summary": "Get a category's settings",
				"description": "This route returns the category's current settings.",
				"parameters": [
					{
						"name": "guild",
						"in": "path",
						"description": "The guild the category belongs to",
						"required": true,
						"style": "simple",
						"schema": {
							"type": "string"
						}
					},
					{
						"name": "category",
						"in": "path",
						"description": "The category to get the settings of",
						"required": true,
						"style": "simple",
						"schema": {
							"type": "string"
						}
					}
				],
				"responses": {
					"200": {
						"description": "OK",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/CategorySettings"
								}
							}
						}
					},
					"default": {
						"$ref": "#/components/responses/default"
					}
				}
			},
			"put": {
				"tags": ["admin"],
				"summary": "Set a category's settings",
				"description": "This route sets the category's settings.",
				"parameters": [
					{
						"name": "guild",
						"in": "path",
						"description": "The guild the category belongs to",
						"required": true,
						"style": "simple",
						"schema": {
							"type": "string"
						}
					},
					{
						"name": "category",
						"in": "path",
						"description": "The category to set the settings of",
						"required": true,
						"style": "simple",
						"schema": {
							"type": "string"
						}
					}
				],
				"requestBody": {
					"description": "The full CategorySettings object",
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/CategorySettings"
							}
						}
					}
				},
				"responses": {
					"200": {
						"description": "OK",
						"content": {
							"application/json": {
								"schema": {
									"type": "array",
									"items": {
										"$ref": "#/components/schemas/CategorySettings"
									}
								}
							}
						}
					},
					"default": {
						"$ref": "#/components/responses/default"
					}
				}
			}
		},
		"/admin/guilds/{guild}/stats": {
			"get": {
				"tags": ["admin"],
				"summary": "Get statistics about this guild",
				"description": "This route returns the statistics of the guild.",
				"parameters": [
					{
						"name": "guild",
						"in": "path",
						"description": "The guild to get the stats of",
						"required": true,
						"style": "simple",
						"schema": {
							"type": "string"
						}
					}
				],
				"responses": {
					"200": {
						"description": "OK",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/GuildStats"
								}
							}
						}
					},
					"default": {
						"$ref": "#/components/responses/default"
					}
				}
			}
		},
		"/archives/guilds": {
			"get": {
				"tags": ["user"],
				"summary": "List the guilds that the client and the user have in common",
				"description": "This route returns an array of guilds that the client and user have in common and it is therefore possible for the user to have a ticket in.",
				"responses": {
					"200": {
						"description": "OK",
						"content": {
							"application/json": {
								"schema": {
									"type": "array",
									"items": {
										"$ref": "#/components/schemas/Guild"
									}
								}
							}
						}
					},
					"default": {
						"$ref": "#/components/responses/default"
					}
				}
			}
		},
		"/global/stats": {
			"get": {
				"tags": ["global"],
				"summary": "Get the statistics for this instance",
				"description": "This **public route** (no authentication required) returns the statistics of the bot instance.",
				"responses": {
					"200": {
						"description": "OK",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/GlobalStats"
								}
							}
						}
					},
					"default": {
						"$ref": "#/components/responses/default"
					}
				},
				"security": []
			}
		}
	},
	"components": {
		"schemas": {
			"Error": {
				"type": "object",
				"properties": {
					"code": {
						"type": "integer"
					},
					"message": {
						"type": "string"
					}
				},
				"example": {
					"code": "0x190",
					"message": "Bad Request"
				}
			},
			"Category": {
				"type": "object",
				"properties": {
					"id": {
						"type": "string"
					},
					"name": {
						"type": "string"
					}
				},
				"example": {
					"id": "620272351988285480",
					"name": "Support"
				}
			},
			"CategorySettings": {
				"type": "object",
				"required": [
					"channelName",
					"claiming",
					"discordCategory",
					"memberLimit",
					"name",
					"openingMessage",
					"pingRoles",
					"requiredRoles",
					"requireTopic",
					"staffRoles",
					"totalLimit"
				],
				"properties": {
					"channelName": {
						"type": "string"
					},
					"claiming": {
						"type": "boolean"
					},
					"createdAt": {
						"type": "string"
					},
					"description": {
						"type": "string"
					},
					"discordCategory": {
						"type": "string"
					},
					"emoji": {
						"type": "string"
					},
					"enableFeedback": {
						"type": "boolean"
					},
					"image": {
						"type": "string"
					},
					"memberLimit": {
						"type": "integer"
					},
					"name": {
						"type": "string"
					},
					"openingMessage": {
						"type": "string"
					},
					"pingRoles": {
						"type": "array",
						"items": {
							"type": "string"
						}
					},
					"requiredRoles": {
						"type": "array",
						"items": {
							"type": "string"
						}
					},
					"requireTopic": {
						"type": "boolean"
					},
					"staffRoles": {
						"type": "array",
						"items": {
							"type": "string"
						}
					},
					"surveyDescription": {
						"type": "string"
					},
					"surveyLink": {
						"type": "string"
					},
					"surveyTitle": {
						"type": "string"
					},
					"totalLimit": {
						"type": "integer"
					}
				},
				"example": {
					"channelName": "ticket-{num}",
					"claiming": false,
					"description": "Get help with anything",
					"discordCategory": "874366537727877181",
					"emoji": "❓",
					"image": "https://dunb17ur4ymx4.cloudfront.net/webstore/logos/984f4179fe2495ac7a6675b1e81b514135e5a603.png",
					"memberLimit": 1,
					"name": "Support",
					"openingMessage": "Thank you for creating a ticket. Please be patient, a member of the support team will reply when they become available. Whilst you wait, please provide as much information about your support query as possible. ",
					"pingRoles": [513828182697312267],
					"requiredRoles": [],
					"requireTopic": true,
					"staffRoles": [451745787974778908, 513828182697312267],
					"surveyDescription": "Click on the button below to give us feedback.",
					"surveyLink": "https://forms.google.com",
					"surveyTitle": "How did we do?",
					"totalLimit": -1
				}
			},
			"GlobalStats": {
				"type": "object",
				"properties": {
					"activatedUsers": {
						"type": "integer"
					},
					"archviedMessages": {
						"type": "integer"
					},
					"avgResponseTime": {
						"type": "integer"
					},
					"guilds": {
						"type": "integer"
					},
					"guildsAvgMembers": {
						"type": "integer"
					},
					"guildsTotalMembers": {
						"type": "integer"
					},
					"tags": {
						"type": "integer"
					},
					"tickets": {
						"type": "integer"
					}
				}
			},
			"Guild": {
				"type": "object",
				"properties": {
					"id": {
						"type": "string"
					},
					"logo": {
						"type": "string"
					},
					"name": {
						"type": "string"
					}
				},
				"example": {
					"id": "451745464480432129",
					"logo": "https://cdn.discordapp.com/icons/451745464480432129/c340066806e27569c1c6b2bbd8ab28f1.png",
					"name": "Planet Earth"
				}
			},
			"GuildStats": {
				"type": "object",
				"properties": {
					"categories": {
						"type": "array",
						"items": {
							"allOf": [
								{
									"$ref": "#/components/schemas/Category"
								},
								{
									"type": "object",
									"properties": {
										"tickets": {
											"type": "integer"
										}
									}
								}
							]
						}
					},
					"archviedMessages": {
						"type": "integer"
					},
					"avgResponseTime": {
						"type": "string"
					},
					"tags": {
						"type": "integer"
					},
					"tickets": {
						"type": "integer"
					}
				},
				"example": {
					"categories": [
						{
							"id": "620272351988285480",
							"name": "Support",
							"tickets": 47
						}
					],
					"archivedMessages": 1768,
					"avgResponseTime": "1h 7m",
					"tags": 14,
					"tickets": 47
				}
			},
			"GuildSettings": {
				"type": "object",
				"required": ["archive", "blocklist", "errorColour", "primaryColour", "successColour"],
				"properties": {
					"archive": {
						"type": "boolean"
					},
					"blocklist": {
						"type": "array",
						"items": {
							"type": "string"
						}
					},
					"createdAt": {
						"type": "string"
					},
					"errorColour": {
						"type": "string"
					},
					"primaryColour": {
						"type": "string"
					},
					"successColour": {
						"type": "string"
					}
				},
				"example": {
					"archive": true,
					"blocklist": ["587112191950585856"],
					"errorColour": "RED",
					"primaryColour": "#009999",
					"successColour": "GREEN"
				}
			}
		},
		"securitySchemes": {
			"api_key": {
				"type": "apiKey",
				"name": "Authorization",
				"in": "header"
			}
		},
		"responses": {
			"default": {
				"description": "Unexpected error",
				"content": {
					"application/json": {
						"schema": {
							"$ref": "#/components/schemas/Error"
						}
					}
				}
			}
		}
	}
}
